<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appselecttesttask">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_movie"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSelectTestTask">
        <activity
            android:theme="@style/Theme.AppSelectTestTask.Launcher"
            android:name=".ui.FilmsListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>